        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
            <HyperlinkButton Content="前往官网" NavigateUri="https://yourwebsite.com"/>
            <HyperlinkButton Content="前往反馈" NavigateUri="https://yourfeedback.com"/>
